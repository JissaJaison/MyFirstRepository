<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.onbts.ITSMobile.UI.fragments.IssueListFragment"
        android:id="@+id/issue_list_fragment"
        tools:layout="@layout/fragment_list_issue"/>

    <fragment
        android:layout_width="240dp"
        android:layout_height="match_parent"
        class="com.onbts.ITSMobile.UI.fragments.menu.LeftMenuFragment"
        android:id="@+id/menu_left"
        android:layout_gravity="left"
        tools:layout="@layout/menu_left_fragment"/>

    <fragment
        android:layout_width="200dp"
        android:layout_height="match_parent"
        class="com.onbts.ITSMobile.UI.fragments.menu.RightMenuFragment"
        android:id="@+id/menu_right"
        android:layout_gravity="right"
        tools:layout="@layout/menu_right_fragment"/>

</android.support.v4.widget.DrawerLayout>
