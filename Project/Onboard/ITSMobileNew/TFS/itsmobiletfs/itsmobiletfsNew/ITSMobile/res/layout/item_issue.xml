<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:id="@+id/vPrior"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#55FF55" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llIssueLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/vPrior"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:paddingRight="14dp">
                <ImageView
                    android:id="@+id/vAlert"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:id="@+id/tvIssueStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    android:text="TextView"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tvIssueId"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingRight="14dp">

                <TextView
                    android:id="@+id/tvIssueType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.7"
                    android:ellipsize="end"
                    android:paddingRight="100dp"
                    android:singleLine="true"
                    android:text="Improper Securing qwe qw eqw eqw eqw eqw e"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingRight="14dp">

                <TextView
                    android:id="@+id/tvIssueLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvIssueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIssueDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingRight="40dp"
                    android:text="TextView12312414134TextViewTextView TextV234234234234iewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewTextView TextViewv"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgAttach"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_clip" />

                <ImageView
                    android:id="@+id/imgFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ic_star" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>